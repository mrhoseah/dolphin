{
    "name": "dolphin/framework",
    "description": "Enterprise-grade PHP framework for rapid development with modern frontend integration",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Dolphin Framework Team",
            "email": "team@dolphin.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "symfony/console": "^6.0",
        "symfony/http-foundation": "^6.0",
        "symfony/routing": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "league/container": "^4.2",
        "league/route": "^5.1",
        "illuminate/database": "^10.0",
        "illuminate/validation": "^10.0",
        "illuminate/support": "^10.0",
        "twig/twig": "^3.0",
        "firebase/php-jwt": "^6.0",
        "ramsey/uuid": "^4.7",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Dolphin\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan install"
        ],
        "post-update-cmd": [
            "php artisan install"
        ],
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
